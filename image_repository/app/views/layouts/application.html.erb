<!DOCTYPE html>
<html>
  <head>
    <title>ImageRepository</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='body'>
    <% flash.each do |message_type, message| %>
      <div class="<%= message_type %>"><%= message.is_a?(String)? message : message.join('| \t') %></div>
    <% end %>
    <div class="ui menu">
      <%= link_to "View Public Images", root_path, class: "link active item" %>
      <% if current_user&.present? %>
          <%= link_to "Profile", user_path(current_user), class: "link active item" %>
          <%= link_to "Log out", logout_path, class: "link active item", method: :delete %>
      <% else %>
        <%= link_to "Login now!", login_path, class: "link active item" %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
